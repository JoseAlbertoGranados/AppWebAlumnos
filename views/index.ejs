<!Doctype html>

<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ITCG - Actividades Extraescolares</title>
    
    <!--  BOOTSTRAP  -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

<!-- FOONT AWESOME -->
<script src="https://kit.fontawesome.com/9584a3d4cd.js" crossorigin="anonymous"></script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.10/dist/sweetalert2.min.css">
</head>

<body>
   <!--Header reservado para el logo -->
    <header>
        <img src="resources/encabezado.png" class="logo">
        <!--Este será la etiquieta para el button -->
        <label id="btnMenu" class="nav-bar"> <i class="fa-solid fa-bars"></i> </label>
    </header>
    <nav class="main-nav">
        <!--Menu dividido en Items y Links -->
        <ul class="menu" id="menu">
            <li class="menu__item container-submenu">
                <a class="menu__link submenu-btn" href="#">Inicio</a>
                <!--Apartado de SubMenu -->
                <ul class="submenu">
                    <li class="menu__item"><a class="menu__link" href="inscripcion">Inscripción a Actividad Extraescolar</a></li>
                    <li class="menu__item"> <a class="menu__link" href="loginPromotor"> Promotores </a> </li>
                    <li class="menu__item"> <a class="menu__link" href="loginJefe"> Jefe de Departamento </a></li>
                </ul>
            </li>
            <li class="menu__item"><a class="menu__link" href="mision">Información</a></li>
            <li class="menu__item"><a class="menu__link" href="horarios">Horarios</a></li>
            <li class="menu__item"><a class="menu__link" href="#">Contactos</a></li>


        </ul>

    </nav>




<main class="main">
    <h3>Actividades Extraescolares </h3>
    <div class="container">
            
                    

                            
        <table class="table table-bordered table-striped text-center mt-4">
            <thead>
              <tr class="bg-primary text-white">
                <th scope="col">Id Actividad</th>
                <th scope="col">Horario</th>
                <th scope="col">Lugar</th>
                
              </tr>
            </thead>
            <tbody>
              <!--Recibir los resultados de la consulta, almacenarlo en user y mostrarlos-->
              <% results.forEach((user) => { %>
              <!--los simbolos <%= %> son por el motor de plantillas ejs-->
              <tr>
                <td> <%= user.idActividad %></td>
                <td> <%= user.horario %></td>
                <td> <%= user.lugar %></td>
                
              </tr>
              <% }) %>
            </tbody>
          </table>
                                    
                        
                        

        
        
    </div>
</main>

    <!-- SCRIPTS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>


    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.10.2/dist/umd/popper.min.js" integrity="sha384-7+zCNj/IqJ95wo16oMtfsKbZ9ccEh31eOz1HGyDuCQ6wgnyJNSYdrPa03rtR1zdB" crossorigin="anonymous"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.min.js" integrity="sha384-QJHtvGhmr9XOIpI6YVutG+2QOK9T+ZnN4kzFN1RtK3zEFEIsxhlmWl5/YESvpZ13" crossorigin="anonymous"></script>

<script type="text/javascript">

    const btnMenu = document.querySelector("#btnMenu");
    const subMenuBtn = document.querySelectorAll(".submenu-btn");

    btnMenu.addEventListener("click", function(){
        menu.classList.toggle("mostrar");
    });

    for(let i = 0; i < subMenuBtn.length; i++){
        subMenuBtn[i].addEventListener("click", function(){

           if(window.innerWidth < 1024){
                const subMenu = this.nextElementSibling;
                const height = subMenu.scrollHeight;

                if(subMenu.classList.contains("desplegar")){
                    subMenu.classList.remove("desplegar");
                    subMenu.removeAttribute("style");

                }else{
                    subMenu.classList.add("desplegar");
                    subMenu.style.height = height + "px";
                }
           }

        });
    }
</script>

<style type="text/css">
    *{
        box-sizing: border-box;
    }

    .logo{
        height: 70px;
        
    }

    body{
        margin: 0;
        /* background: url(https://www.xtrafondos.com/wallpapers/vertical/textura-reciclado-arrugado-azul-64.jpg);*/
   
    }
    .container{
        box-shadow: 5px 10px 5px 10px #888888;
    }

    h3{
        text-align: center;
        padding-top: 10px;
        padding-bottom: 20px;
    }

    .nav-bar{
        color: rgb(26, 26, 65);
        padding: 20px;
        width: 100%;
        background: #2fa595;
        font-size: 1.2em;
        display: block;
        cursor: pointer;

    }

    .menu, .submenu{
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .menu{
        background: #2fa595;
        width: 100%;
        margin-left: -100%;
        transition: all 0.5s;
        position: absolute;
    }

    .menu__link{
        display: block;
        padding: 20px;
        font-size: 1.2em;
        text-decoration: none;
        color: black;
    }

    .menu__link:hover{
        background: #92d6eb;
    }

    .submenu .menu__link:hover{
        background: #78E7F1;
    }

    .submenu{
        height: 0;
        overflow: hidden;
        transition: all 0.3s;
    }

    .submenu .menu__link{
        padding: 40px;
        background: #E4E879;
    }

    .mostrar{
        margin-left: 0;
    }


@media(min-width: 1024px){
    .nav-bar{
        display: none;
    }

    .logo{
        height: 80px;
    }

    header{
        align-content: center;
        align-items: center;
        text-align: center;
    }

    .menu{
        margin-left: 0;
        display: flex;
        padding-left: 45%;
        position: relative;
    }

    .container-submenu{
        position: relative;
    }

    .submenu{
        position: absolute;
        top: 60px;
        width: 200px;
        overflow: visible;
        z-index: 1000;
        visibility: hidden;
        cursor: pointer;
    }

    .container-submenu:hover .submenu{
        opacity: 1;
        visibility: visible;
    }

}

</style>
</body>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.10/dist/sweetalert2.all.min.js"></script>

</html>